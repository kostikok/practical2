<Window x:Class="Pract2.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pract2"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Label Content="Введите слово для перевода" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="50" Width="300" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="result" HorizontalAlignment="Center" Margin="0,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Height="50" TextAlignment="Center" FontSize="18"/>
        <Button Content="Перевести" HorizontalAlignment="Center" Margin="0,154,0,0" VerticalAlignment="Top" Height="45" Width="100" Background="#FFA5DEF1" Click="Button_Click_1"/>
        <Button x:Name="returnbutton" Content="Вернуться" HorizontalAlignment="Left" Margin="10,374,0,0" VerticalAlignment="Top" Height="35" Width="65" Background="Red" Click="returnbutton_Click"/>

    </Grid>
</Window>
