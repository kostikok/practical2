<Window x:Class="Pract2.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pract2"
        mc:Ignorable="d"
        Title="Window3" Height="450" Width="800">
    <Grid>
        <Button x:Name="returnbutton" Content="Вернуться" HorizontalAlignment="Left" Margin="10,374,0,0" VerticalAlignment="Top" Height="35" Width="65" Background="Red" Click="returnbutton_Click"/>
        <Label Content="Введите значение от 0 до 100" HorizontalAlignment="Center" Margin="0,39,0,0" VerticalAlignment="Top" Height="35" Width="270" FontSize="18" FontWeight="Bold"/>
        <TextBox x:Name="Input" HorizontalAlignment="Center" Margin="0,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="45" FontSize="16"/>
        <Button x:Name="Calculate" Content="Расчитать" HorizontalAlignment="Center" Margin="0,144,0,0" VerticalAlignment="Top" Height="30" Width="80" FontWeight="Bold" Click="Calculate_Click"/>
        <Label x:Name="Result" Content="" HorizontalAlignment="Left" Margin="355,224,0,0" VerticalAlignment="Top" Height="36" Width="120" FontSize="16" FontWeight="Bold" RenderTransformOrigin="0.5,0.446"/>

    </Grid>
</Window>
